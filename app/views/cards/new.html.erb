<div class="card-main">
  <%= form_with url: cards_path, id: 'user-form', class: 'form-wrap',local: true do |f| %>
  <div class='form-header'>
    <div class="form-header-text">
      <h1>カード登録</h1>
    </div><br>
  </div>
    <div class='form-group'>
    <div class="form-text">
      <%= f.label :number, "【カード番号】" %>
      <span class="indispensable">必須</span>
    </div>
      <%= f.text_field :number, class:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
    </div>
    <div class='form-group'>
     <div class="form-text">
      <%= f.label :cvc ,"【ＣＶＣ】" %>
      <span class="indispensable">必須</span>
     </div>
      <%= f.text_field :cvc, class:"cvc", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
    </div>
    <div class='form-group'>
        <br>
          <div class="card-text">
            <span>【有効期限】</span><span class="indispensable">必須</span>
              <div class='input-card-date'>
                <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "exp_month" %>
                <p>月</p>
                <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "exp_year" %>
                <p>年</p>
              </div>
          </div>
      <div class='card-btn'>
        <%= f.submit "登録する" ,class:"register-red-btn" %>
      </div>
        <%= link_to "登録せずに商品画面へ", root_path, class:"no-card-login" %>
    </div>
  <% end %>
</div>
